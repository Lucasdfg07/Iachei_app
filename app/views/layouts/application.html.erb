<!DOCTYPE html>
<html>
  <head>
    <title>IacheiApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
  	<main>
      <% if alert %>
        <p class="alert alert-danger alert"><%= alert %></p>
      <% end %>

      <% if notice %>
        <p class="alert alert-success notice"><%= notice %></p>
      <% end %>
    
      <section class="container text-center">
          <% if user_signed_in? %>
            <section class="content col-md-6 offset-md-3">
              <section class="float-right">
                <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
              </section>

      		    <%= yield %>
            <% else %>
              <%= yield %>
            <% end %>
          </section>
      </section>
  	</main>
  </body>
</html>

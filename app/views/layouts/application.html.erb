<!DOCTYPE html>
<html>
  <head>
    <title>IacheiApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= favicon_link_tag asset_path('/icons/favicon.ico')%>
  </head>

  <body>
  	<main>
      <% if alert %>
        <p class="alert alert-danger alert"><%= alert %></p>
      <% end %>

      <% if notice %>
        <p class="alert alert-success notice"><%= notice %></p>
      <% end %>
      
      <% if user_signed_in? %>
        <section class="logout">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <%= image_tag 'logout', title: 'Sair', class: 'logout_btn' %> <b style="color: blue;">Sair</b>
          <% end %>
        </section>
      <% end %>
      
      <section class="container text-center">
        <section class="content col-md-6 offset-md-3">
      		    <%= yield %>
          </section>
      </section>

      <% if user_signed_in? %>
          <%= render 'shared/footer' if current_user.city.present? %>
      <% end %> 
  	</main>
  </body>
</html>

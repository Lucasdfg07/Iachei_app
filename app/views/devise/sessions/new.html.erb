<section class="user_login mb-4">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col-md-4 offset-md-4 text-center'}) do |f| %>

    <section class="logo">
      <%= image_tag 'iachei.png', alt: 'iachei logo' %>
    </section>

    <section class="field input-group mb-2">
      <%= f.email_field :email, autofocus: true, placeholder: 'Digite seu Email', autocomplete: "email", class: 'form-control' %>
    </section>

    <section class="field input-group mb-2">
      <%= f.password_field :password, placeholder: 'Digite sua Senha', autocomplete: "current-password", class: 'form-control' %>
    </section>

    <% if devise_mapping.rememberable? %>
      <section class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </section>
    <% end %>

    <section class="actions">
      <%= f.submit "Entrar", class: 'btn btn-info' %>
    </section>

    <br />
    
    <section class="actions">
      <%= link_to 'Registrar-se', new_user_registration_path, class: 'btn btn-success' %>
    </section>

    <br />

    <section class="actions">
      <%= link_to 'Esqueceu sua senha?', new_user_password_path, class: 'btn btn-warning' %>
    </section>

    <section class="row auth">
      <%= link_to user_facebook_omniauth_authorize_path, class: 'facebook_btn col-md-6 mt-2' do %>
        <%= image_tag 'facebook_icon.png' %> Sign In With Facebook
      <% end %>

      <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'google_btn col-md-5 mt-2 offset-md-1' do %>
        <%= image_tag 'google.png' %> Sign In With Google
      <% end %>
    </section>
  <% end %>
</section>
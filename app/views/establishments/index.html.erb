<section class="establishment_content">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Cidade:</b> <%= current_user.city.name %>
  </p>

  <%= search_form_for @q do |f| %>
    <%= f.collection_select :name_eq, current_user.city.establishments, :id, :name, {include_blank: 'Pesquise por um estabelecimento'}, class: 'form-control' %>
  <% end %>

  <script>
      $( "#q_name_eq" ).select2({
          placeholder: 'Pesquise por um estabelecimento'
      });
  </script>

  <br>

  <h4>Escolha uma categoria</h4>

  <hr>

  <section class="row">
    <% @categories.each do |category| %>
      <section class="col-4 image_category mt-2">
        <%= link_to category_establishments_path(id: category) do %>
          <%= image_tag category.photo %>
        <% end %>
      </section>
    <% end %>
  </section>

  <section class="paginate_div text-center mt-3">
    <%= paginate @categories %>
  </section>

  <hr>

  <h5>Ou Selecione um estabelecimento</h5>

  <hr>

  <%= render 'list_establishments' %>
</section>